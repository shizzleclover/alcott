const prisma = new PrismaClient();

async function main() {
  console.log('ðŸŒ± Starting seed...');

  await prisma.shippingRate.deleteMany({});
  console.log('ðŸ—‘  Cleared existing shipping rates');

  const shippingRates = [
    // NGN Rates
    {
      type: 'REGULAR',
      lower_eta: 5,
      upper_eta: 7,
      price: 2000,
      currency: 'NGN',
    },
    {
      type: 'CARGO',
      lower_eta: 3,
      upper_eta: 5,
      price: 3500,
      currency: 'NGN',
    },
    {
      type: 'EXPRESS',
      lower_eta: 1,
      upper_eta: 3,
      price: 5000,
      currency: 'NGN',
    },
  ];

  for (const rate of shippingRates) {
    const createdRate = await prisma.shippingRate.create({
      data: rate,
    });
    console.log(`âœ… Created ${createdRate.type} (${createdRate.currency}) - ${createdRate.currency === 'NGN' ? 'â‚¦' : '$'}${createdRate.price}`);
  }

  console.log('ðŸŽ‰ Seed completed successfully!');
}

main()
  .catch((e) => {
